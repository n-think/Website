@using Microsoft.AspNetCore.Identity
@using Website.Service.Interfaces
@using Website.Web.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IClientProfileService ClientProfileService

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Profile">Профиль</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Управление">
                    @{ //TODO вывод имени пользователя в углу экрана (снизу сделано плохо, надо в клеймы запихнуть все данные при логине и не тащится за ними в бд)
                        var name = UserManager.GetUserName(User);
                        var fullName = await ClientProfileService.GetFullName(name);
                        if (fullName == null)
                        {
                            @UserManager.GetUserName(User)
                        }
                        else
                        {
                            @fullName;
                        }
                    }
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выход</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>
    </ul>
}
