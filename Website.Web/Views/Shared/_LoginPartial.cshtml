@using Castle.Core.Internal
@using Microsoft.AspNetCore.Identity
@using Website.Data.EF.Models
@using Website.Service.Interfaces
@using Website.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IClientProfileService ClientProfileService

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Управление">
                    <span class="glyphicon glyphicon-user"></span>
                    @{
                        string fullName = User.FindFirst(c => c.Type == "FullName")?.Value;
                        @(fullName.IsNullOrEmpty() ? UserManager.GetUserName(User) : fullName)
                    }
                </a>
            </li>
            <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Корзина</a></li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выход</button>&nbsp&nbsp
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>
    </ul>
}
