@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@section Css {
    <link rel="stylesheet" href="~/dist/admin.css" asp-append-version="true"/>
}

<div class="row m-0">
    <div class="col-md-2 border-right p-3">
        @await Html.PartialAsync("_AdminNav")
    </div>
    <div id="admin-content" class="col-md-10 p-3">
        @RenderBody()
    </div>
</div>

@section Scripts {
        <script src="~/dist/admin-bundle.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
}
